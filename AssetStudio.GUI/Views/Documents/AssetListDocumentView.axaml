<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AssetStudio.GUI.ViewModels.Documents"
             xmlns:models="using:AssetStudio.GUI.Models.Documents"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="AssetStudio.GUI.Views.Documents.AssetListDocumentView"
             x:DataType="vm:AssetListDocumentViewModel">

    <Design.DataContext>
        <vm:AssetListDocumentViewModel />
    </Design.DataContext>

    <DockPanel>
        <!-- Search -->
        <StackPanel DockPanel.Dock="Top" Margin="8,4">
            <TextBox Name="AssetSearchBox"
                     Watermark="Search assets..."
                     Text="{Binding SearchText}"
                     Margin="0,0,0,4" />

            <!-- Filter Controls -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox Name="FilterMethodCombo"
                          Grid.Column="0"
                          SelectedIndex="{Binding SelectedSearchFilterMode}"
                          HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Fuzzy" />
                    <ComboBoxItem Content="Contains" />
                    <ComboBoxItem Content="Exact" />
                    <ComboBoxItem Content="Regex" />
                </ComboBox>

                <ComboBox Name="IncludeExcludeCombo"
                          Grid.Column="2"
                          SelectedIndex="{Binding SelectedIncludeExcludeMode}"
                          HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Include" />
                    <ComboBoxItem Content="Exclude" />
                </ComboBox>

                <ComboBox Name="FilterAssetTypeCombo"
                          Grid.Column="4"
                          ItemsSource="{Binding AssetTypeFilters}"
                          HorizontalAlignment="Stretch"
                          MaxDropDownHeight="200">
                    <ComboBox.ItemContainerTheme>
                        <ControlTheme TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Template">
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            PointerPressed="OnComboBoxItemPointerPressed">
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter>
                        </ControlTheme>
                    </ComboBox.ItemContainerTheme>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}"
                                      IsChecked="{Binding IsSelected}"
                                      Margin="4,2" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <ComboBox.SelectionBoxItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="Asset Types" />
                        </DataTemplate>
                    </ComboBox.SelectionBoxItemTemplate>
                </ComboBox>
            </Grid>
        </StackPanel>

        <!-- Asset List -->
        <DataGrid Name="AssetDataGrid"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  ItemsSource="{Binding CollectionView}"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray"
                  Margin="4"
                  ColumnHeaderHeight="25"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  x:DataType="vm:AssetListDocumentViewModel">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="150"
                                    x:DataType="models:AssetItem" />
                <DataGridTextColumn Header="Container"
                                    Binding="{Binding Container}"
                                    Width="200"
                                    x:DataType="models:AssetItem" />
                <DataGridTextColumn Header="Type"
                                    Binding="{Binding Type}"
                                    Width="120"
                                    x:DataType="models:AssetItem" />
                <DataGridTextColumn Header="PathID"
                                    Binding="{Binding PathId}"
                                    Width="80"
                                    x:DataType="models:AssetItem" />
                <DataGridTextColumn Header="Size"
                                    Binding="{Binding Size}"
                                    Width="*"
                                    x:DataType="models:AssetItem" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>

</UserControl>